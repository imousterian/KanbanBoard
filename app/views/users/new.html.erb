<div class = 'container container-index center2 '>

    <h1>Sign up</h1>

    <div class="row">

        <div class="col-sm-6 col-sm-offset-3">

            <%= form_for @user do |f| %>

                <%= render 'shared/messages', object: f.object %>

                <%= render 'fields', :f => f %>

                <p> <%= f.submit "Create my account", class: "btn btn-large btn-primary center" %> </p>

            <% end %>
        </div>
    </div>
</div>
