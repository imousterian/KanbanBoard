<div class="container">
    <h1>Listing Kanbans</h1>

    <table id="movies">
      <tr>
        <th>Title</th>
        <th>Count of elements</th>
        <th>Count of columns</th>
      </tr>

    <% @kanbans.each do |kanb| %>
      <tr>
        <td><%= link_to kanb.name, kanban_path(kanb) %></td>
        <td><%= kanb.organizations.count %></td>
        <td><%= kanb.settings.length %></td>
      </tr>
    <% end %>
    </table>

    <%= link_to "Back to index", root_path %>

</div>
