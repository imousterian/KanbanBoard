
<div class='container'>
    <h2> Listing progress for <%= @kanban.name %> </h2>

        <table id="kanban" class='table-hover for-plus'>

            <tr>
                <th> <%= link_to @kanban.name, edit_kanban_path %> </th>

                <% @kanban.kanban_milestones.each do |name| %>
                    <th> <%= name.kms_name %> </th>
                <% end %>

                <th> <a href = '<%=link_to @kanban %>' data-target="#test_modal" data-toggle="modal" style="width:100%" >
                        <span class="glyphicon glyphicon-plus tag-tooltip" data-toggle="tooltip" data-placement="right" title="New column!"></span>
                </th>

            </tr>

                <% @kanban.organizations.each do |this_org| %>

                    <tr>
                        <td> <%= this_org.name %> </td>

                            <%= form_for(this_org) do |f| %>

                                    <%= f.fields_for :milestones do |ms| %>

                                        <td class="dropdown" style="background-color: <%= this_org.milestones[ms.options[:child_index]].milestone_value %> " >

                                            <a href="#" data-toggle="dropdown" class="dropdown-toggle extended">  <b class="caret caret-right" ></b> </a>

                                            <ul class="dropdown-menu dropdown-menu-left" role="menu" >

                                                    <li role="presentation">
                                                        <p id='whitecolored' class="colored" >
                                                            <%= ms.radio_button :milestone_value, "#FFFFFF", :onclick => "this.form.submit();" %>
                                                        </p>
                                                    </li>

                                                    <li role="presentation">
                                                        <p id='greycolored' class="colored" >
                                                            <%= ms.radio_button :milestone_value, "#F8F8F8", :onclick => "this.form.submit();" %>
                                                        </p>
                                                    </li>

                                                    <li role="presentation">
                                                        <p id='greencolored' class="colored" >
                                                            <%= ms.radio_button :milestone_value, "#66FF66", :onclick => "this.form.submit();" %>
                                                        </p>
                                                    </li>

                                                    <li role="presentation">
                                                        <p id='yelcolored' class='colored'>
                                                            <%= ms.radio_button :milestone_value, "#FFFF33", :onclick => "this.form.submit();" %>
                                                        </p>
                                                    </li>
                                                    <li role="presentation">
                                                        <p id='redcolored' class='colored'>
                                                            <%= ms.radio_button :milestone_value, "#FF0000", :onclick => "this.form.submit();"%>
                                                        </p>
                                                    </li>
                                            </ul>
                                        </td>

                                    <% end %> <!-- end of this_org.progress.each -->

                            <% end %> <!-- end of form_for -->
                    </tr>

                <% end %> <!-- end of kanban.organizations.each -->

            <!-- <td> <a href= '/organizations/new'><span class="glyphicon glyphicon-plus"></span></a></td> -->

        </table>

        <p class='line2'>
            <a href= '/organizations/new' >
                <span class="glyphicon glyphicon-plus tag-tooltip" data-toggle="tooltip" data-placement="bottom" title="New task!"></span>
            </a>
        </p>

        <p class='line line-show'>
            <%= link_to "Back to all kanbans", kanbans_path %>
        </p>

 </div>

<div class="modal fade" id='test_modal' tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" area-hidden="true">
    <%= render 'modal_form' %>
</div>


