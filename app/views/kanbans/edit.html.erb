<div class="container">

    <h3> Yay, let's edit the kanban </h3><br>

    <%= form_for @kanban, :url => {:action => "update"} do |f| %>

        <% @kanban.errors.full_messages.each do |msg| %>
            <p> <%= msg %> </p>
        <% end %>

        <table id="kanbans"><tr>
            <th>
                <%= f.label @kanban.name%>
            </th>
            <td>
                <%= f.text_field :name %>
            </td>
        </tr>

        <%= f.fields_for :kanban_milestones do |ff| %>

            <tr>
                <th> <%= ff.label :kms_name %> </th>
                <td> <%= ff.text_field :kms_name %> </td>
                <td> <%= check_box_tag "cols[#{:kms_name}]" %> </td>
                <!-- <td> <a href='#' class='btn2 removeRow2'>X</a> </td> -->
            </tr>


        <% end %>

        </table>

        <br>

        <%= f.submit "Update columns", class: "btn btn-sm btn-primary", :name => "update_columns" %>
        <%= f.submit "Delete columns", class: "btn btn-sm btn-primary", name: "remove_columns" %>
        <%= link_to 'Cancel', kanban_path, class: "btn btn-sm btn-primary" %>

    <% end -%>

</div>


