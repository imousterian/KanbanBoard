<table id="kanbans"><tr>
    <th>
        <%= f.label @kanban.name%>
    </th>
    <td>
        <%= f.text_field :name %>
    </td>
</tr>

<%= f.fields_for :settings do |d| %>
    <% @kanban.settings.try(:each) do |key,value| %>

        <tr>
            <th> <%= d.label value %> </th>
            <td> <%= d.text_field key, :value => value %> </td>
            <td> <%= check_box_tag "cols[#{key}]" %> </td>
            <!-- <td> <a href='#' class='btn2 removeRow2'>X</a> </td> -->
        </tr>

    <% end %>

</table>

    <br>
    <%= f.submit "Save changes", class: "btn btn-sm btn-primary" %>
    <%= f.submit "Delete selected", class: "btn btn-sm btn-primary", name: "remove_columns" %>
    <%= link_to 'Cancel', kanban_path, class: "btn btn-sm btn-primary" %>

<%- end -%>
